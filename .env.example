# Server Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Database Configuration (NeonDB or local PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/taskdb

# Redis Configuration
# Option 1: Use REDIS_URL for managed Redis (Upstash)
# REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379
#
# Option 2: Use REDIS_HOST and REDIS_PORT for local Docker Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# SMTP Configuration (for emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Authentication Configuration
ACCESS_TOKEN_SECRET=your-access-token-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-refresh-token-secret-min-32-chars
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
FORGOT_PASSWORD_REDIRECT_URL=http://localhost:3000/api/v1/users/reset-password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
